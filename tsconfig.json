{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["components/*"],
      "@prop-types/*": ["lib/types/*"],
      "@utils/*": ["lib/utils/*"],
      "@hooks/*": ["lib/hooks/*"],
      "@data/*": ["lib/data/*"],
      "@public/*": ["public/*"],
      "@styles/*": ["styles/*"],
      "@pages/*": ["pages/*"],
    }

  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
